<h1>Create a Movie Party for <%= @movie.title %></h1>
<p>Viewing Party Details</p>
<p>Movie Title: <%= @movie.title %></p>
<%= form_with url: user_movie_viewing_parties_path(@user, @movie.id), method: :post, local: true do |f| %>
  <%= f.label :duration_of_party %>
  <%= f.number_field :duration_of_party, value: @movie.runtime, min: @movie.runtime %>
  <%= f.label :day %>
  <%= f.date_field :day %>
  <%= f.label :start_time %>
  <%= f.time_field :start_time %>
  <% @users.each do |user| %>
    <%= f.check_box "user-#{user.id}".to_sym %>
    <%= f.label "user-#{user.id}".to_sym, "#{user.name}(#{user.email})" %>
  <% end %>
  <%= f.submit "Create Party Viewing Party for #{@movie.title}" %>
<% end %>